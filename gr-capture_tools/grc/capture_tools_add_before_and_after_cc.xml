<?xml version="1.0"?>
<block>
  <name>add_before_and_after_cc</name>
  <key>capture_tools_add_before_and_after_cc</key>
  <category>[capture_tools]</category>
  <import>import capture_tools</import>
  <make>capture_tools.add_before_and_after_cc($n_before, $n_after, $val_before, $val_after)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>N samples before</name>
    <key>n_before</key>
    <type>Int</type>
  </param>

  <param>
    <name>Value before</name>
    <key>val_before</key>
    <type>Int</type>
<!--    <value>0</value>-->
  </param>

  <param>
    <name>N samples after</name>
    <key>n_after</key>
    <type>Int</type>
  </param>

  <param>
    <name>Value after</name>
    <key>val_after</key>
    <type>Int</type>
<!--    <value>0</value>-->
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
