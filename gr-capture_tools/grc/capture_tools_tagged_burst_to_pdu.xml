<?xml version="1.0"?>
<block>
  <name>tagged_burst_to_pdu</name>
  <key>capture_tools_tagged_burst_to_pdu</key>
  <category>[capture_tools]</category>
  <import>import capture_tools</import>
  <make>capture_tools.tagged_burst_to_pdu($max_burst_size, $relative_center_frequency, $relative_span, $d_relative_sample_rate, $outstanding_limit, $drop_overflow)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>...</name>
    <key>...</key>
    <type>...</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type><!-- e.g. int, float, complex, byte, short, xxx_vector, ...--></type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type><!-- e.g. int, float, complex, byte, short, xxx_vector, ...--></type>
  </source>
</block>
